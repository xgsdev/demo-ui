global-reset()

*
  box-sizing border-box

body
  font-size $sp-font-size
  line-height $sp-line-height
  font-family $helvetica
  font-weight normal
  background #f2f2f2

header
  display flex
  justify-content space-between
  padding 0
  height 45px
  box-shadow 0px 8px 9px -6px rgba(0,0,0,0.2)

  .logo
    flex 0 1 40px
    background url("../imgs/ic_beenhere_24px.svg") no-repeat center center
    background-size 28px
    margin-left 10px

  .topmenu 
    display flex
    align-items center
    margin-right 0px

  .mitem
    min-width 45px
    +desktop()
      min-width 65px

  .mitem a
    color #f2f2f2
    text-decoration none

  .shop
    fill #f2f2f2
    margin-top 5px

nav ul
  display flex

.display
  margin auto
  margin-left 150px
  margin-top 20px

main
  padding 10px 10px
  +desktop()
    padding 20px 40px

table
  border-collapse collapse

tr
  border-bottom 1px solid #ebebeb


tr.table-header
  background #f1f1f1

.display
  width 200px
  height 30px
  position relative
  display block
  line-height 24px
  background #c1f1f1
  overflow hidden
  border-radius 6px

select::-ms-expand
  display none

select:focus::-ms-value 
  background #c1f1f1
  color #444

select:-moz-focusring
    color transparent
    text-shadow 0 0 0 #000

select
  width 100%
  height 100%
  padding 0 0 0 10px
  appearance none
  outline 0
  box-shadow none
  border 0 !important
  background #c1f1f1
  color #444
  font-size 14px
  letter-spacing 1px

.display
  &::after
    content '\25BC'
    position absolute
    color #fff
    top 0
    right 0
    bottom 0
    padding 0 8px
    line-height 28px
    background #34495e
    pointer-events none
