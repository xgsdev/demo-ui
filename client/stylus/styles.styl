  width 120px
  height 30px
  position relative
  display block
  line-height 24px
  background $hs-sele-color
  border-bottom 1px solid #607D8B
  overflow hidden

select::-ms-expand
  display none

select:focus::-ms-value 
  background $hs-sele-color
  color #444

select:-moz-focusring
    color transparent
    text-shadow 0 0 0 #000

select
  width 100%
  height 100%
  padding 0 0 0 10px
  appearance none
  outline 0
  box-shadow none
  border 0 !important
  background $hs-sele-color
  color #444
  font-size 14px
  letter-spacing 1px

.hs-select
  &::after
    content '\25BC'
    position absolute
    color #fff
    top 0
    right 0
    bottom 0
    margin 5px
    border-radius 4px
    font-size 9px
    padding 0px 8px
    line-height 21px
    background #34495e
    pointer-events none// }}}

main
  flex 1 0 auto
  padding 0px 10px
  +desktop()
    padding 20px 40px

