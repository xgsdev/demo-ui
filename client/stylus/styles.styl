global-reset()

*
  box-sizing border-box

html
  height 100%

body
  font-size $sp-font-size
  line-height $sp-line-height
  font-family $helvetica
  font-weight normal
  background #f2f2f2
  min-height 100%
  display flex
  flex-direction column

header
  display flex
  justify-content space-between
  padding 0
  height 45px
  margin-bottom 15px
  box-shadow 0px 8px 9px -6px rgba(0,0,0,0.2)

  .logo
    flex 0 1 1
    // background red
    width 40px
    height 40px
    margin-left 12px
    margin-top 5px

  .logo svg
    width 35px
    height 35px
    // fill gray

  .topmenu 
    display flex
    width 150px
    justify-content space-between
    align-items center
    margin-right 20px
    +desktop()
      width 220px

  .mitem a
    color #f2f2f2
    text-decoration none

  .shop a svg
    fill #f2f2f2
    margin-top 5px

[class^=btn]
  font-family $helvetica
  font-size 12px
  letter-spacing .8px

input {
	&[type="email"], &[type="text"], 
	&[type="password"] {
    border-bottom 0px
    line-height 11px
    color #607D8B
	  &:focus, &:valid {
	    &::-webkit-input-placeholder {
	      font-size: 14px;
	      line-height 11px
	      transform: translateY(1px);
	    }
	  }
	}
}


nav
  display flex
  justify-content space-between
  border-bottom 1px solid gray
  padding 0px 20px 20px 20px
  margin-bottom 30px

  ul
    display flex
    width 220px
    justify-content space-between

  li 
    flex 0 

  a
    color #607D8B
    text-decoration none

.subnav
  display flex
  justify-content space-between
  padding 5px 20px 20px 20px
  margin-bottom 0px

  button
    margin-right 20px
    margin-top 5px

